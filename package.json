{
  "name": "recursica-forge",
  "description": "A tool for managing Recursica variables, themes, and token definitions",
  "private": true,
  "version": "0.3.0",
  "homepage": "https://forge.recursica.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/borderux/recursica-forge.git"
  },
  "author": "Border LLC",
  "license": "MIT",
  "keywords": [
    "recursica",
    "forge",
    "variables",
    "themes",
    "tokens"
  ],
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "type-check": "tsc -b --pretty false",
    "test": "vitest run --reporter=verbose",
    "test:ci": "CI=true vitest run --reporter=verbose",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "watch:icons": "node scripts/watch-icon-mapping.mjs",
    "watch:toolbar-icons": "node scripts/watch-toolbar-icons.mjs",
    "changeset": "changeset",
    "release": "changeset publish"
  },
  "dependencies": {
    "@carbon/react": "^1.93.0",
    "@carbon/styles": "^1.92.0",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@heroicons/react": "^2.2.0",
    "@mantine/core": "^8.3.5",
    "@mantine/hooks": "^8.3.5",
    "@mantine/notifications": "^8.3.5",
    "@mui/material": "^7.3.4",
    "@mui/system": "^7.3.3",
    "@phosphor-icons/react": "^2.1.10",
    "@radix-ui/react-icons": "^1.3.2",
    "@types/crypto-js": "^4.2.2",
    "@vanilla-extract/css": "^1.17.4",
    "@vanilla-extract/vite-plugin": "^5.1.1",
    "crypto-js": "^4.2.0",
    "html2canvas": "^1.4.1",
    "jszip": "^3.10.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.30.1"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jszip": "^3.4.0",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.5",
    "@types/testing-library__jest-dom": "^5.14.9",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^3.2.4",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "jsdom": "^27.0.0",
    "typescript": "^5.6.3",
    "vite": "^5.4.9",
    "vitest": "^3.2.4"
  }
}