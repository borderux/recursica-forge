{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Brand JSON Schema",
  "description": "Schema for Brand.json structure",
  "type": "object",
  "required": ["brand"],
  "properties": {
    "brand": {
      "type": "object",
      "required": ["themes"],
      "properties": {
        "themes": {
          "type": "object",
          "required": ["light"],
