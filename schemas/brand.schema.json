            },
            "neutral": {
              "$ref": "#/definitions/palette"
            },
            "palette-1": {
              "$ref": "#/definitions/palette"
            },
            "palette-2": {
              "$ref": "#/definitions/palette"
            }
          },
          "patternProperties": {
            "^palette-\\d+$": {
              "$ref": "#/definitions/palette"
            }
          },
          "additionalProperties": true
        },
        "elevations": {
          "type": "object",
          "patternProperties": {
            "^elevation-\\d+$": {
              "$ref": "#/definitions/elevation"
            }
          }
        },
        "states": {
          "$ref": "#/definitions/state"
        },
        "text-emphasis": {
          "type": "object",
          "properties": {
            "low": {
              "type": "object",
              "required": ["$type", "$value"],
              "properties": {
                "$type": {
                  "type": "string",
                  "enum": ["number"]
                },
                "$value": {
