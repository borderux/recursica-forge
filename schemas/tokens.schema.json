{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Tokens JSON Schema",
  "description": "Schema for Tokens.json structure",
  "type": "object",
  "required": ["tokens"],
  "properties": {
    "tokens": {
      "type": "object",
      "properties": {
        "color": {
          "type": "object",
          "patternProperties": {
            "^[a-z0-9_-]+$": {
              "type": "object",
              "patternProperties": {
                "^\\d{2,4}|000|050|1000$": {
                  "type": "object",
                  "required": ["$type", "$value"],
                  "properties": {
                    "$type": {
                      "type": "string",
                      "enum": ["color"]
                    },
                    "$value": {
                      "type": "string",
                      "pattern": "^#[0-9a-fA-F]{6}$"
                    }
                  },
                  "additionalProperties": false
                }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        },
        "size": {
          "type": "object",
          "patternProperties": {
            "^[a-z0-9_-]+$": {
              "oneOf": [
                {
                  "type": "object",
                  "properties": {
                    "$type": {
                      "type": "string"
                    },
                    "$value": {
                      "oneOf": [
                        {
                          "type": "number"
                        },
                        {
                          "type": "string"
                        },
                        {
                          "type": "object",
                          "properties": {
                            "value": {
                              "oneOf": [
                                { "type": "number" },
                                { "type": "string" }
                              ]
                            },
                            "unit": {
                              "type": "string"
                            }
                          },
                          "required": ["value"]
                        }
                      ]
                    }
                  },
                  "required": ["$type", "$value"],
                  "additionalProperties": true
                },
                {
                  "type": "number"
                },
                {
                  "type": "string"
                }
              ]
            }
          },
          "additionalProperties": true
        },
        "opacity": {
          "type": "object",
          "patternProperties": {
            "^[a-z0-9_-]+$": {
              "type": "object",
              "required": ["$type", "$value"],
              "properties": {
                "$type": {
                  "type": "string",
                  "enum": ["number"]
                },
                "$value": {
                  "type": "number",
                  "minimum": 0,
                  "maximum": 1
                }
              },
              "additionalProperties": false
            }
          }
        },
        "font": {
          "type": "object",
          "additionalProperties": true
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}

